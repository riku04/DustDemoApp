<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/sendButton"
        android:layout_width="297dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="リクエスト送信"
        android:textSize="24dp"
        android:layout_marginBottom="16dp"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/labelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOACK"
            android:textSize="32dp"

            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="376dp"
        android:layout_above="@+id/sendButton"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        >

        <LinearLayout
            android:id="@+id/mainScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:background="@drawable/layout_tint"
            android:backgroundTint="@color/SkyBlue"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/voltageLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/voltageResult"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="3"
                    android:background="@drawable/layout_tint"
                    android:backgroundTint="@color/White"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="1.234"
                    android:textSize="88dp" />

                <TextView
                    android:id="@+id/voltage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="V"
                    android:textSize="32dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tempLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tempResult"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="3"
                    android:background="@drawable/layout_tint"
                    android:backgroundTint="@color/White"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="23.4"
                    android:textSize="32dp" />

                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="℃"
                    android:textSize="32dp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/channelLayout"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="top"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/SkyBlue"
                android:clickable="true"
                >
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:text="ch1"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/value1"
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:text=""
                    android:textSize="12dp"
                    android:gravity="center_vertical|center_horizontal"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/Orange"
                >
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:text="ch2"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/value2"
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:text="value2"
                    android:textSize="12dp"
                    android:gravity="center_vertical|center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/GreenYellow"
                >
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:text="ch3"
                    android:textSize="12dp"

                    />
                <TextView
                    android:id="@+id/value3"
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:text="value3"
                    android:textSize="12dp"
                    android:gravity="center_vertical|center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tag4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/MediumPurple"
                >
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:text="ch4"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/value4"
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:text="value4"
                    android:textSize="12dp"
                    android:gravity="center_vertical|center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tag5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/LightPink"
                >
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:text="ch5"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/value5"
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:text="value5"
                    android:textSize="12dp"
                    android:gravity="center_vertical|center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tag6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/IndianRed"
                >
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:text="ch6"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/value6"
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:text="value6"
                    android:textSize="12dp"
                    android:gravity="center_vertical|center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tag7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/Yellow"
                >
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:text="ch7"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/value7"
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:text="value7"
                    android:textSize="12dp"
                    android:gravity="center_vertical|center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tag8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/ForestGreen"
                >
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:text="ch8"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/value8"
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:text="value8"
                    android:textSize="12dp"
                    android:gravity="center_vertical|center_horizontal"
                    />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            >
            <TextView
                android:id="@+id/idDescription"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"

                android:text="ID:"
                android:textSize="22dp"
                android:gravity="center_horizontal|center_vertical"
                />
            <TextView
                android:id="@+id/dateDescription"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/idDescription"

                android:text="yyyy/mm/dd hh:mm"
                android:textSize="22dp"
                android:gravity="center_horizontal|center_vertical"
                />

        </RelativeLayout>

    </FrameLayout>


</RelativeLayout>